<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Primary Header Color -->
    <SolidColorBrush Color="#4447E2" x:Key="HeaderColor"/>
    <SolidColorBrush Color="ForestGreen" x:Key="HeaderColorGreen"/>
    <!-- Background Colors -->
    <SolidColorBrush Color="#F8F8F8" x:Key="Backdrop"/>
    <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="#625F6E"/>
    <SolidColorBrush x:Key="SecundaryBackgroundColor" Color="#625F6E"/>
    <SolidColorBrush x:Key="TextBoxBackroundColor" Color="#EAEDF2"/>

    <!-- Text Colors -->
    <SolidColorBrush Color="#110C27" x:Key="TableInnertext"/>
    <SolidColorBrush Color="#262631" x:Key="TextBoxForegraund"/>
    <SolidColorBrush Color="#110C27" x:Key="TableHeaderText"/>
    <SolidColorBrush x:Key="PrimaryTextColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecundaryColor" Color="#B0B7C3"/>
    <SolidColorBrush x:Key="TextTertiaryColor" Color="#8A94A6"/>
    <SolidColorBrush x:Key="TextFourthColor" Color="#4447E1"/>
    <SolidColorBrush x:Key="SecundaryTextColor" Color="#004242FF"/>

    <!-- Table Colors -->
    <SolidColorBrush Color="#F3F2F7" x:Key="TableHeaderBack"/>
    <SolidColorBrush Color="#FFFFFF" x:Key="TableIneerBack"/>
    <SolidColorBrush Color="#F6F6F9" x:Key="TableIneerBackHover"/>

    <!-- Action Colors -->
    <SolidColorBrush Color="Red" x:Key="OchirishButtonForegraund"/>
    <SolidColorBrush Color="#FFC0CB" x:Key="IsDelete"/>
    <SolidColorBrush x:Key="PrimaryBlueColor" Color="#3772FF"/>

    <!-- Icon Colors -->
    <SolidColorBrush x:Key="PrimaryIconColor" Color="#625F6E"/>
    <SolidColorBrush x:Key="SecundaryIconColor" Color="#625F6E"/>
    <SolidColorBrush x:Key="TertiarIconyColor" Color="#4B5D78"/>
    <SolidColorBrush x:Key="FourthIconColor" Color="#323B4B"/>

    <!-- Tab Control Colors -->
    <SolidColorBrush x:Key="TabBorderBrush" Color="#283046"/>
    <SolidColorBrush x:Key="TabBackground" Color="#4447E1"/>
    <SolidColorBrush x:Key="TabBorderBrushUnClick" Color="#BDBDBD"/>
    <SolidColorBrush x:Key="TabBackgroundUnClick" Color="#2E2E31"/>
    <SolidColorBrush x:Key="TabTextForeground" Color="#B0B7C3"/>
    <SolidColorBrush x:Key="TabClouseButton" Color="#B0B7C3"/>

    <!-- Additional Colors -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#F8F8F8"/>
    <SolidColorBrush x:Key="BorderColor" Color="#E0E0E0"/>

</ResourceDictionary>
