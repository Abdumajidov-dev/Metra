<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Text Styles -->

    <!-- Centered Text Style -->
    <Style x:Key="CenteredTextStyle" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Header Text -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{DynamicResource TableHeaderText}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Title Text -->
    <Style x:Key="TitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{DynamicResource TableInnertext}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Subtitle Text -->
    <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource SecundaryTextColor}"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Body Text -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource TableInnertext}"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Caption Text -->
    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{DynamicResource TextTertiaryColor}"/>
    </Style>

    <!-- Label Text -->
    <Style x:Key="LabelTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{DynamicResource SecundaryTextColor}"/>
        <Setter Property="Margin" Value="0,0,0,5"/>
    </Style>

    <!-- Error Text -->
    <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{DynamicResource OchirishButtonForegraund}"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
    </Style>

    <!-- Success Text -->
    <Style x:Key="SuccessTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="#4CAF50"/>
        <Setter Property="Margin" Value="0,3,0,0"/>
    </Style>

    <!-- Link Text -->
    <Style x:Key="LinkTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{DynamicResource TextFourthColor}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="TextDecorations" Value="Underline"/>
    </Style>

    <!-- Icon Styles -->

    <!-- Search Icon Style -->
    <Style x:Key="SearchIconStyle" TargetType="Viewbox">
        <Setter Property="Width" Value="16.93"/>
        <Setter Property="Height" Value="16.93"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- Primary Icon Style -->
    <Style x:Key="PrimaryIconStyle" TargetType="Viewbox">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- Small Icon Style -->
    <Style x:Key="SmallIconStyle" TargetType="Viewbox">
        <Setter Property="Width" Value="16"/>
        <Setter Property="Height" Value="16"/>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <!-- Large Icon Style -->
    <Style x:Key="LargeIconStyle" TargetType="Viewbox">
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Margin" Value="5"/>
    </Style>

    <!-- DataGrid Styles -->

    <!-- Standard DataGrid -->
    <Style x:Key="StandardDataGridStyle" TargetType="DataGrid">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="Background" Value="{DynamicResource TableIneerBack}"/>
        <Setter Property="BorderThickness" Value="0.2"/>
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource CustomDataGridColumnHeaderStyle}"/>
        <Setter Property="GridLinesVisibility" Value="All"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="CanUserReorderColumns" Value="False"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="RowHeight" Value="35"/>
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource TableIneerBackHover}"/>
    </Style>

    <!-- DataGrid Column Header Style -->
    <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="{DynamicResource TableHeaderBack}"/>
        <Setter Property="Foreground" Value="{DynamicResource TableHeaderText}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- DataGrid Row Style -->
    <Style x:Key="DataGridRowStyle" TargetType="DataGridRow">
        <Setter Property="Background" Value="{DynamicResource TableIneerBack}"/>
        <Setter Property="Foreground" Value="{DynamicResource TableInnertext}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource TableIneerBackHover}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource TableIneerBackHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- DataGrid Cell Style -->
    <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TableInnertext}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ComboBox Styles -->

    <!-- Standard ComboBox -->
    <Style x:Key="StandardComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{DynamicResource TextBoxBackroundColor}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBoxForegraund}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- CheckBox Styles -->

    <!-- Standard CheckBox -->
    <Style x:Key="StandardCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TableInnertext}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- RadioButton Styles -->

    <!-- Standard RadioButton -->
    <Style x:Key="StandardRadioButtonStyle" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{DynamicResource TableInnertext}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- StackPanel Styles -->

    <!-- Horizontal Stack -->
    <Style x:Key="HorizontalStackStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <!-- Vertical Stack -->
    <Style x:Key="VerticalStackStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical"/>
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <!-- Loading Overlay Style -->
    <Style x:Key="LoadingOverlayStyle" TargetType="Grid">
        <Setter Property="Background" Value="#80000000"/>
        <Setter Property="Panel.ZIndex" Value="999"/>
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

    <!-- Card Style (Grid ichidagi kontent uchun) -->
    <Style x:Key="CardGridStyle" TargetType="Grid">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

</ResourceDictionary>
